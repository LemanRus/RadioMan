<HandbookScreenManager>:
    HandbookScreen:
    TheoryScreen:
    SchematicsScreen:
    PinoutScreen:
    ConnectionsScreen:
    ChipsScreen:
    LifehacksScreen:


<TheoryScreen>:
    name: "theory_screen"
    md_bg_color: app.theme_cls.bg_dark

    MDScrollView:
        pos_hint: {"top": (root.height - theory_top_bar.height) / root.height}
        size_hint_y: (root.height - sp(60)) / root.height

        MDList:
            spacing: "10dp"
            padding: "15dp", "10dp"


    MDTopAppBar:
        id: theory_top_bar
        title: "Теория"
        pos_hint: {"top": 1}
        left_action_items: [["arrow-left", lambda x: app.back_to_screen()]]
        elevation: 1


