<ConverterCalculationScreen>:
    name: "converter_calculation_screen"

    MDBackTopBar:
        id: converter_top_bar

        MDWhiteTopAppBarTitle:
            text: "Конвертер величин"

    ScrollView:
        on_parent: root.build_menu()
        pos_hint: {"top": (root.height - converter_top_bar.height) / root.height}
        size_hint_y: (root.height - converter_top_bar.height) / root.height

        MDPaddedList:

            MDPaddedCard:

                MDLabel:
                    text: "Что переводим:"

                MDCentered06TextField:
                    id: convert_from_input
                    on_text_validate: root.convert(convert_from_input.text, convert_from.text, convert_to.text)

                MDButton:
                    id: convert_from_button
                    pos_hint: {"center_y": 0.5}
                    size_hint: None, None
                    width: root.width / 4
                    theme_width: "Custom"
                    on_release: root.menu_from.open()

                    MDButtonText:
                        id: convert_from
                        text: "мил"
                        pos_hint: {"center_x": 0.5, "center_y": 0.5,}

            MDPaddedCard:
                height: self.minimum_height * 1.5

                MDLabel:
                    text: "Во что переводим:"

                MDLabel:
                    id: convert_to_result
                    size_hint: None, None
                    height: self.font_size
                    width: root.width / 4
                    halign: "right"
                    pos_hint: {"center_y": 0.5}

                MDButton:
                    id: convert_to_button
                    width: root.width / 4
                    pos_hint: {"center_y": 0.5}
                    theme_width: "Custom"
                    size_hint: None, None
                    on_release: root.menu_to.open()

                    MDButtonText:
                        id: convert_to
                        text: "дюйм"
                        pos_hint: {"center_x": 0.5, "center_y": 0.5,}
