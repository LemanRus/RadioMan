<MDGridScreen>:
    cols: 1
    size_hint_y: None
    height: self.minimum_height
    spacing: "10dp"
    padding: "15dp", "10dp"


<MDIconCard>:
    ripple_behavior: True
    size_hint_y: None
    height: self.minimum_height
    spacing: "20sp"
    padding: "15sp"
    elevation: 1


<MDShortenLabel>:
    shorten: True
    shorten_from: "right"
    size_hint_y: None
    pos_hint: {"center_y": 0.5}