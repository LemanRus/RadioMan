<MDGridScreen>:
    cols: 1
    size_hint_y: None
    height: self.minimum_height
    spacing: "10dp"
    padding: "15dp", "10dp"


<MDIconCard>:
    style: "elevated"
    ripple_behavior: True
    size_hint_y: None
    height: self.minimum_height
    spacing: "20sp"
    padding: "15sp"
    elevation: 1


<MDShortenLabel>:
    shorten: True
    shorten_from: "right"
    size_hint_y: None
    pos_hint: {"center_y": 0.5}


<MDPaddedList>:
    spacing: "10dp"
    padding: "15dp", "10dp"


<MDBackTopBar>:
    pos_hint: {"top": 1}
    left_action_items: [["arrow-left", lambda x: app.back_to_screen()]]
    elevation: 1


<MDNoBackTopBar>:
    pos_hint: {"top": 1}
    elevation: 1


<ImageButton>:
    size_hint: None, None
    size: "50dp", "50dp"
    pos_hint: {"center_x": .5, "center_y": .5}

<MDDumbLabel>:
    text: "Этот раздел в процессе наполнения и скоро появится!"
    size_hint_y: None
    size: self.texture_size
    markup: True


<MDTextLabel>:
    size_hint_y: None
    height: self.font_size


<MDPaddedCard>:
    size_hint_y: None
    height: self.minimum_height
    padding: sp(15), 0
    spacing: sp(15)


<MDCentered06TextField>:
    halign: "center"
    size_hint_x: 0.6


<MDVerticalCard>:
    size_hint_y: None
    height: self.minimum_height
    padding: sp(15)
    spacing: sp(25)
    orientation: "vertical"


<MDAdaptiveBoxLayout>:
    adaptive_height: True


<MDRaisedCenteredButton>:
    size_hint: None, None
    pos_hint: {"center_x": 0.5}