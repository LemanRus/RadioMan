<SMDResistorsMarkingScreen>:
    name: "smd_resistors_marking_screen"

    MDBackTopBar:
        id: smd_resistors_top_bar

        MDCenteredTopAppBarTitle:
            text: "SMD резисторы"

    MDScrollView:
        size_hint_y: (root.height - sp(60)) / root.height
        pos_hint: {"top": (root.height - smd_resistors_top_bar.height) / root.height}

        MDGridScreen:

            MDRelativeLayout:
                size_hint_y: None
                height: root.height / 4

                BoxLayout:
                    size_hint_y: None
                    height: root.height / 4
                    pos_hint: {"top": 1}

                    Image:
                        source: "media/smd_resistor_bg.png"
                        pos_hint: {"top": 1}
                        fit_mode: "fill"

                MaxLengthInput:
                    id: resistor_marking_input
                    hint_text: "555"
                    halign: "center"
                    background_color: 0, 0, 0, 0
                    foreground_color: 1, 1, 1, 1
                    max_length: 4
                    size_hint: 0.6, None
                    height: self.minimum_height
                    font_size: "72sp"
                    pos_hint: {"center_y": 0.5, "center_x": 0.5}
                    multiline: False
                    on_text_validate: root.calculate_resistor(self.text)

            MDCard:
                size_hint: (1, None)
                height: self.minimum_height
                padding: sp(15)

                MDLabel:
                    id: smd_result
                    text: "Результат:"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    size_hint_y: None
                    size: self.texture_size

                MDButton:
                    pos_hint: {"center_y": 0.5}
                    size_hint_y: None
                    on_release: root.calculate_resistor(resistor_marking_input.text)

                    MDButtonText:
                        text: "Рассчитать"
                        pos_hint: {"center_x": 0.5, "center_y": 0.5,}
