<HandbookScreen>:
    name: "Справочник"

    MDNoBackTopBar:
        id: handbook_top_bar

        MDCenteredTopAppBarTitle:
            text: "Справочник"

    MDScrollView:
        size_hint_y: (root.height - sp(60)) / root.height
        pos_hint: {"top": (root.height - handbook_top_bar.height) / root.height}

        MDPaddedList:

            MDIconCard:
                on_release: root.parent.current = "theory_screen"

                ImageButton:
                    source: "media/theory.png"
                    on_release: root.parent.current = "theory_screen"

                MDShortenLabel:
                    text: "Теория"

            MDIconCard:
                on_release: root.parent.current = "schematics_screen"

                ImageButton:
                    source: "media/transistor_scheme.png"
                    on_release: root.parent.current = "schematics_screen"

                MDShortenLabel:
                    text: "Обозначения на схемах"

            MDIconCard:
                on_release: root.parent.current = "pinout_screen"

                ImageButton:
                    source: "media/pinout.png"
                    on_release: root.parent.current = "pinout_screen"

                MDShortenLabel:
                    text: "Распиновки"

            MDIconCard:
                on_release: root.parent.current = "connections_screen"

                ImageButton:
                    source: "media/connection.png"
                    on_release: root.parent.current = "connections_screen"

                MDShortenLabel:
                    text: "Типы соединений"

            MDIconCard:
                on_release: root.parent.current = "chips_screen"

                ImageButton:
                    source: "media/chip.png"
                    on_release: root.parent.current = "chips_screen"

                MDShortenLabel:
                    text: "Микросхемы и компоненты"

            MDIconCard:
                on_release: root.parent.current = "lifehacks_screen"

                ImageButton:
                    source: "media/lifehack.png"
                    on_release: root.parent.current = "lifehacks_screen"

                MDShortenLabel:
                    text: "Лайфхаки"
