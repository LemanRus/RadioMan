<HelpScreen>:
    name: "Помощь"

    MDNoBackTopBar:
        id: help_top_bar

        MDCenteredTopAppBarTitle:
            text: "Помощь"

    MDRecycleView:
        size_hint_y: (root.height - sp(60)) / root.height
        pos_hint: {"top": (root.height - help_top_bar.height) / root.height}

        MDPaddedList:

            MDIconCard:
                on_release: root.parent.current = "how_to_screen"

                ImageButton:
                    source: "media/th_resistor.png"
                    on_release: root.parent.current = "how_to_screen"

                MDShortenLabel:
                    text: "Как пользоваться"

            MDIconCard:
                on_release: root.parent.current = "about_screen"

                ImageButton:
                    source: "media/smd_resistor.png"
                    on_release: root.parent.current = "about_screen"

                MDShortenLabel:
                    text: "О программе"
