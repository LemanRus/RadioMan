#:import Clock kivy.clock.Clock

<ChipsScreen>:
    name: "chips_screen"

    MDBackTopBar:
        id: chips_top_bar

        MDWhiteTopAppBarTitle:
            text: "Микросхемы и компоненты"

    ScrollView:
        size_hint_y: (root.height - sp(60)) / root.height
        pos_hint: {"top": (root.height - chips_top_bar.height) / root.height}

        MDPaddedList:

            MDIconCard:
                on_release: root.parent.current = "chips_analogs_select_screen"

                ImageButton:
                    source: "media/th_capacitor.png"
                    on_release: root.parent.current = "chips_analogs_select_screen"

                MDShortenLabel:
                    text: "Аналоги отечественных микросхем"

<ChipsAnalogsSelectScreen>:
    name: "chips_analogs_select_screen"

    MDBackTopBar:
        id: chips_analogs_select_top_bar

        MDWhiteTopAppBarTitle:
            text: "Аналоги отечественных микросхем"

    ScrollView:
        size_hint_y: (root.height - sp(60)) / root.height
        pos_hint: {"top": (root.height - chips_analogs_select_top_bar.height) / root.height}

        MDPaddedList:

            MDIconCard:
                on_release: 
                    root.parent.current = "chips_analogs_screen"; \
                    root.parent.get_screen("chips_analogs_screen").ids.chips_analogs.build_table("series133"); \
                    root.parent.get_screen("chips_analogs_screen").ids.chips_analogs_top_bar_title.text = "Серия 133"

                ImageButton:
                    source: "media/th_capacitor.png"
                    on_release: root.parent.current = "chips_analogs_screen"

                MDShortenLabel:
                    text: "Серия 133"

            MDIconCard:
                on_release: 
                    root.parent.current = "chips_analogs_screen"; \
                    root.parent.get_screen("chips_analogs_screen").ids.chips_analogs.build_table("series140"); \
                    root.parent.get_screen("chips_analogs_screen").ids.chips_analogs_top_bar_title.text = "Серия 140"

                ImageButton:
                    source: "media/th_capacitor.png"
                    on_release: root.parent.current = "chips_analogs_screen"

                MDShortenLabel:
                    text: "Серия 140"

            MDIconCard:
                on_release: 
                    root.parent.current = "chips_analogs_screen"; \
                    root.parent.get_screen("chips_analogs_screen").ids.chips_analogs.build_table("series580"); \
                    root.parent.get_screen("chips_analogs_screen").ids.chips_analogs_top_bar_title.text = "Серия 580"

                ImageButton:
                    source: "media/th_capacitor.png"
                    on_release: root.parent.current = "chips_analogs_screen"

                MDShortenLabel:
                    text: "Серия 580"

<ChipsAnalogsScreen>:
    name: "chips_analogs_screen"

    MDBackTopBar:
        id: chips_analogs_top_bar

        MDWhiteTopAppBarTitle:
            id: chips_analogs_top_bar_title
            text: "Test"

    ScrollView:
        size_hint_y: (root.height - sp(60)) / root.height
        pos_hint: {"top": (root.height - chips_analogs_top_bar.height) / root.height}
        do_scroll_x: False

        ChipsAnalogs:
            id: chips_analogs
