<ChipsScreen>:
    name: "chips_screen"

    MDBackTopBar:
        id: chips_top_bar

        MDCenteredTopAppBarTitle:
            text: "Микросхемы и компоненты"

    MDRecycleView:
        size_hint_y: (root.height - sp(60)) / root.height
        pos_hint: {"top": (root.height - chips_top_bar.height) / root.height}

        MDPaddedList:

            MDIconCard:
                on_release: root.parent.current = "kr580_screen"

                ImageButton:
                    source: "media/th_capacitor.png"
                    on_release: root.parent.current = "kr580_screen"

                MDShortenLabel:
                    text: "Комплект КР580"

