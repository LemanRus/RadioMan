    MDNavigationBar:
        id: bottom_navigation
        on_switch_tabs: app.on_switch_tabs(*args)

        MDNavigationItem:
            name: "markings_screen_item"
            active: True

            MDNavigationItemLabel:
                theme_text_color: "Custom"
                text_color_active: app.theme_cls.primaryColor
                text_color_normal: app.theme_cls.tertiaryColor
                text: "Маркировки"

            MDNavigationItemIcon:
                theme_icon_color: "Custom"
                icon_color_active: app.theme_cls.primaryColor
                icon_color_normal: app.theme_cls.tertiaryColor
                icon: "resistor"

        MDNavigationItem:
            name: "calculations_screen_item"

            MDNavigationItemLabel:
                theme_text_color: "Custom"
                text_color_active: app.theme_cls.primaryColor
