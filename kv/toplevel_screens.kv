<MarkingsScreen>:

    RelativeLayout:

        MDScrollView:
            pos_hint: {"top": (root.height - markings_top_bar.height) / root.height}

            MDGridLayout:
                adaptive_height: True
                cols: 1
                spacing: "10dp"
                padding: "15dp"

                MDCardSh1:
                    ripple_behavior: True
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: "20sp"
                    padding: "15sp"
#                    Until best days:
#                    elevation: 2

                    MDIconButton:
                        ripple_scale: 0
                        size_hint_y: None
                        icon: "media/resistor.png"
                        icon_size: "50sp"
                        pos_hint: {"center_y": 0.5}

                    MDLabel:
                        text: "Резисторы"
                        adaptive_size: True
                        pos_hint: {"center_y": 0.5}

                MDCardSh2:
                    ripple_behavior: True
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: "20sp"
                    padding: "15sp"
#                    Until best days:
#                    elevation: 2

                    MDIconButton:
                        ripple_scale: 0
                        size_hint_y: None
                        icon: "media/capacitor.png"
                        icon_size: "50sp"
                        pos_hint: {"center_y": 0.5}

                    MDLabel:
                        text: "Конденсаторы"
                        adaptive_size: True
                        pos_hint: {"center_y": 0.5}

        MDTopAppBar:
            id: markings_top_bar
            title: "Маркировки"
            pos_hint: {"top": 1}
            left_action_items: [["arrow-left", lambda x: None], ]






