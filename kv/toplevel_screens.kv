<MarkingsScreen>:
    name: "markings_screen"
    md_bg_color: app.theme_cls.bg_dark

    MDRecycleView:
        pos_hint: {"top": (root.height - markings_top_bar.height) / root.height}
        size_hint_y: (root.height - sp(60)) / root.height

        MDList:
            spacing: "10dp"
            padding: "15dp", "10dp"

            MDIconCard:
                on_release: root.parent.current = "resistors_markings_select_screen"

                MDIconButton:
                    ripple_scale: 0
                    size_hint_y: None
                    icon: "media/resistor.png"
                    icon_size: "50sp"
                    pos_hint: {"center_y": 0.5}
                    on_release: root.parent.current = "resistors_markings_select_screen"

                MDShortenLabel:
                    text: "Резисторы"

            MDIconCard:
                on_release: root.parent.current = "capacitors_marking_select_screen"

                MDIconButton:
                    ripple_scale: 0
                    size_hint_y: None
                    icon: "media/capacitor.png"
                    icon_size: "50sp"
                    pos_hint: {"center_y": 0.5}
                    on_release: root.parent.current = "capacitors_marking_select_screen"

                MDShortenLabel:
                    text: "Конденсаторы"

    MDTopAppBar:
        id: markings_top_bar
        title: "Маркировки"
        pos_hint: {"top": 1}
        elevation: 1

