<MarkingsScreen>:
    name: "markings_screen"
    md_bg_color: app.theme_cls.bg_dark

    MDScrollView:
        pos_hint: {"top": (root.height - markings_top_bar.height) / root.height}
        size_hint_y: (root.height - sp(60)) / root.height

        MDList:
            spacing: "10dp"
            padding: "15dp", "10dp"

            MDCard:
                ripple_behavior: True
                size_hint_y: None
                height: self.minimum_height
                spacing: "20sp"
                padding: "15sp"
                on_release: root.parent.current = "resistors_markings_select_screen"
                elevation: 1

                MDIconButton:
                    ripple_scale: 0
                    size_hint_y: None
                    icon: "media/resistor.png"
                    icon_size: "50sp"
                    pos_hint: {"center_y": 0.5}
                    on_release: root.parent.current = "resistors_markings_select_screen"

                MDLabel:
                    text: "Резисторы"
                    shorten: True
                    shorten_from: "right"
                    size_hint_y: None
                    pos_hint: {"center_y": 0.5}

            MDCard:
                ripple_behavior: True
                size_hint_y: None
                height: self.minimum_height
                spacing: "20sp"
                padding: "15sp"
                on_release: root.parent.current = "capacitors_marking_select_screen"
                elevation: 1

                MDIconButton:
                    ripple_scale: 0
                    size_hint_y: None
                    icon: "media/capacitor.png"
                    icon_size: "50sp"
                    pos_hint: {"center_y": 0.5}
                    on_release: root.parent.current = "capacitors_marking_select_screen"

                MDLabel:
                    text: "Конденсаторы"
                    shorten: True
                    shorten_from: "right"
                    size_hint_y: None
                    pos_hint: {"center_y": 0.5}

    MDTopAppBar:
        id: markings_top_bar
        title: "Маркировки"
        pos_hint: {"top": 1}
        elevation: 1

